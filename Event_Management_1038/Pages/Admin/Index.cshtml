<style>
    /* Color variables for consistency (Black → Red background, Yellow accents, White text) */
    :root {
        --admin-black: #000000;
        --admin-red: #8B0000; /* dark red */
        --admin-accent: #FFD700; /* yellow */
        --admin-accent-opaque: rgba(255,215,0,0.9);
        --admin-text: #ffffff; /* white for body text */
        --admin-muted: rgba(255,255,255,0.75);
    }

    /* Page-wide theme - applied when body has class 'admin-page' */
    body.admin-page {
        background: linear-gradient(180deg, var(--admin-black) 0%, var(--admin-red) 100%);
        color: var(--admin-text);
        min-height: 100vh;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

        /* Tidy up default link and button colors for the themed page */
        body.admin-page a {
            color: var(--admin-accent);
            text-decoration: underline;
        }

            body.admin-page a:hover {
                color: var(--admin-accent-opaque);
            }

        body.admin-page .btn-primary {
            background-color: var(--admin-accent);
            border-color: rgba(0,0,0,0.2);
            color: #000;
        }

    /* Black / Red themed admin banner with Yellow accent and White text */
    .admin-hero {
        background: linear-gradient(90deg, rgba(0,0,0,0.95) 0%, rgba(139,0,0,0.95) 100%);
        color: var(--admin-text);
        padding: 36px;
        border-radius: 10px;
        box-shadow: 0 8px 28px rgba(0,0,0,0.6);
        margin: 18px 0;
        border: 2px solid rgba(255,215,0,0.08);
        backdrop-filter: blur(4px);
    }

    .admin-badge {
        display: inline-block;
        background: var(--admin-accent); /* yellow */
        color: #000; /* black text on badge for contrast */
        padding: 6px 12px;
        border-radius: 6px;
        font-weight: 700;
        font-size: 0.9rem;
        margin-right: 12px;
        vertical-align: middle;
        box-shadow: 0 2px 6px rgba(0,0,0,0.35);
    }

    .admin-sub {
        color: var(--admin-accent-opaque);
        opacity: 0.95;
        margin-top: 6px;
    }

    .admin-hero h1 {
        margin: 0;
        font-size: 1.75rem;
        color: var(--admin-text);
        font-weight: 800;
    }

    .admin-hero .signed-in {
        color: var(--admin-text);
        opacity: 0.95;
    }

    /* Muted small text */
    .admin-muted {
        color: var(--admin-muted);
    }

    /* Ensure containers don't appear transparent on the dark background */
    .card, .table, .card-body {
        background-color: rgba(0,0,0,0.45);
        color: var(--admin-text);
        border: 1px solid rgba(255,255,255,0.04);
    }

    /* Keep layout responsive using Bootstrap utilities (no media queries here). */
</style>

<div class="container-fluid py-4">
    <div class="admin-hero">
        <div class="d-flex align-items-center justify-content-between flex-wrap">
            <div class="me-3">
                <span class="admin-badge">Admin</span>
                <h1 class="d-inline-block">Admin Dashboard</h1>
                <div class="admin-sub small">welcome to Tazim's admin panel'</div>
            </div>
            <div class="text-end ms-auto">
                <div class="small admin-muted">Signed in as</div>
                <div class="signed-in" style="font-weight:700">Administrator</div>
            </div>
        </div>
    </div>

    <!-- Minimal content area to show the page-wide color context -->
    <div class="mt-3">
        <div class="card p-3">
            
            <div class="card-body">
                Hello admin! I am your head Tazim.
            </div>
        </div>
    </div>
</div>

<script>
    // Add class to body so the theme only applies when this Razor page is rendered.
    (function() {
        try {
            if (document && document.body && !document.body.classList.contains('admin-page')) {
                document.body.classList.add('admin-page');
            }
        } catch (e) {
            // Fail silently if DOM not available at script execution time.
        }
    })();
</script>
<div>
    @DateTime.Now.ToString("MMMM dd, yyyy HH:mm:ss")
</div>
